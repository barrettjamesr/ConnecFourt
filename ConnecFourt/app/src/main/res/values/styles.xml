<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/hdr_text_sizes</item>
        <item name="android:gravity">center</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="LabelStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/lbl_text_sizes</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="SpinnerStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/lbl_text_sizes</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
</resources>
