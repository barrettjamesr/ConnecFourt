<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:layout_marginTop="@dimen/layout_margin_vert"
        android:layout_marginStart="@dimen/layout_margin_vert"
        android:layout_marginBottom="@dimen/layout_margin_vert"
        android:gravity="center">

        <TextView
            style="@style/LabelStyle"
            android:layout_marginEnd="@dimen/label_margin_end"
            android:text=""
            android:gravity="top"
            android:layout_weight="1"
            android:id="@+id/player1Settings"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_weight="1"
            android:id="@+id/spinner1Settings" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_marginTop="@dimen/layout_margin_vert"
        android:layout_marginStart="@dimen/layout_margin_vert"
        android:layout_marginBottom="@dimen/layout_margin_vert"
        android:layout_below="@+id/layout1"
        android:gravity="center">

        <TextView
            style="@style/LabelStyle"
            android:layout_marginEnd="@dimen/label_margin_end"
            android:text=""
            android:gravity="top"
            android:layout_weight="1"
            android:id="@+id/player2Settings"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_weight="1"
            android:id="@+id/spinner2Settings"/>

    </LinearLayout>

</RelativeLayout>